<Window x:Class="LoginScreenApp.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginScreenApp"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MessageWindow, IsDesignTimeCreatable=True }"
        Title="Validação de Credenciais"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize"
        Width="300"
        Height="180">
    <Grid>
        <!-- Authentication Response Message -->
        <TextBlock Text="{Binding Path=Message, Mode=OneWay}"
                   FontFamily="Inter"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
    </Grid>
</Window>
